<Window x:Class="Simple.Wpf.Template.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewModels="clr-namespace:Simple.Wpf.Template.ViewModels"
        Title="MainWindow"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}">
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TabControl Grid.Column="0"
                    Grid.Row="0">
            <TabItem Header="Item 1">
                
                <DockPanel LastChildFill="True">

                    <TextBlock DockPanel.Dock="Top">
                        <Run Text="Title: " />
                        <Run Text="{Binding Path=Title, Mode=OneTime}" />
                    </TextBlock>

                    <Border DockPanel.Dock="Top" 
                            BorderBrush="Red"
                            BorderThickness="2"
                            Margin="10"
                            Padding="10"
                            Height="200"
                            Width="100">

                        <ContentPresenter Content="{Binding Path=Child1, Mode=OneTime}" />

                    </Border>

                    <Border BorderBrush="Blue"
                            BorderThickness="2"
                            Margin="10"
                            Padding="10">

                        <ContentPresenter Content="{Binding Path=Child2, Mode=OneTime}" />

                    </Border>

                </DockPanel>
                
            </TabItem>
            <TabItem Header="Item 2">
                
                <Grid>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="100" />
                    </Grid.RowDefinitions>

                    <TextBox Grid.Column="0"
                             Grid.Row="0"
                             Text="Test">
                        <TextBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="1" />
                                <Separator />
                                <MenuItem Header="2" />
                                <MenuItem Header="3" />

                            </ContextMenu>
                        </TextBox.ContextMenu>
                    </TextBox>

                    <TextBlock Grid.Column="0"
                               Grid.Row="1"
                               Padding="10"
                               VerticalAlignment="Stretch"
                               HorizontalAlignment="Stretch"
                               FontStyle="Italic"
                               Text="Some text goes here" />

                </Grid>

                

            </TabItem>

        </TabControl>
        
        <ContentPresenter  Grid.Column="0"
                           Grid.Row="1"
                           Content="{Binding Path=Diagnostics, Mode=OneWay}" />

    </Grid>
    
</Window>
