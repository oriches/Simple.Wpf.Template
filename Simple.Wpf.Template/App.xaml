<Application x:Class="Simple.Wpf.Template.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:r="clr-namespace:Simple.Wpf.Template.Resources">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <r:SharedResourceDictionary Source="Resources/Converters/Converters.xaml" />

                <r:SharedResourceDictionary Source="Resources/Templates/Templates.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
